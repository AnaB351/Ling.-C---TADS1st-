/* Calcular Média > Aprovação */

#include <stdio.h>

int main ()
{
    float numero, nota1, nota2, média;
    
    printf("Informe a nota do 1º semestre:  ");
    scanf("%f", &nota1);
    printf("Informe a nota do 2º semestre:  ");
    scanf("%f", &nota2);
    média = (nota1+nota2)/2;

    if (média >= 7)
    {
        printf("você está aprovado com média %.2f", média);
    } else {
        printf("você está reprovado com média %.2f", média);
    }
    
    return 0;
}
